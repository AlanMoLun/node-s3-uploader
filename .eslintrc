# vi:syntax=json
{
  "extends": "airbnb-base",
  "env": {
    "mocha": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script",
    "ecmaFeatures": {
      "modules": false
    }
  },
  "rules": {
    "strict": [2, "global"],
    "no-underscore-dangle": ["error", { "allow": [
      "_randomPath",
      "_upload"
    ]}],
    "no-param-reassign": ["error", { "props": false }]
  }
}
